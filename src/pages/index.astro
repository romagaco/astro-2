---
import Header from '../components/Header.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLang = Astro.currentLocale || 'es'; // Fallback to 'es'
const title = currentLang === 'es' ? 'Inicio' : 'Home'; // Localized title
---

<html lang={currentLang}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body>
    <Header title={title} />
    <main>
      <h2>{currentLang === 'es' ? 'Bienvenido' : 'Welcome'}</h2>
      <p>{currentLang === 'es' ? 'Esta es la p√°gina de inicio.' : 'This is the homepage.'}</p>
    </main>
  </body>
</html>